# Backend Environment Configuration Template
# Copy this file to .env and fill in your values
# .env is gitignored and safe for sensitive data

# Firebase Configuration
# Get your API Key from: Firebase Console → Project Settings → Web API Key
FIREBASE_API_KEY=your_firebase_api_key_here

# Path to Firebase service account key JSON file
# Download from: Firebase Console → Project Settings → Service Accounts → Generate New Private Key
FIREBASE_SERVICE_ACCOUNT_KEY=serviceAccountKey.json

# Access Control Options (choose one or both):
#
# Option 1: Domain-based (recommended for organizations)
# Allow all users from specific email domains
ALLOWED_DOMAINS=hubspot.com
#
# Option 2: Email whitelist (for specific individuals)
ALLOWED_EMAILS=user1@example.com,user2@example.com
#
# If both are set, users matching EITHER will be allowed.
# If neither is set, ALL authenticated users are allowed.

# Admin emails - comma-separated list of admin emails (can create public templates)
ADMIN_EMAILS=admin@example.com

# CORS Origins - Frontend URLs that can access the API
ALLOWED_ORIGINS=https://your-frontend-domain.com,http://localhost:8080,http://localhost:5173,http://localhost:3000

# Authentication Control
REQUIRE_AUTH=true

# Rate Limiting
RATE_LIMIT_DISABLED=false

# Firestore Environment - 'prod' or 'dev'
FIRESTORE_ENVIRONMENT=prod

# ElevenLabs API Key (for voice features)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Optional: Firebase test token for automated testing
# FIREBASE_TEST_TOKEN=your_test_token_here

# Optional: Override default GCP settings
# PROJECT_ID=genmediastudio
# LOCATION=us-central1
# GCS_BUCKET=genmediastudio-assets
